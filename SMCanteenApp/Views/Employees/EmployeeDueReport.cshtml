
@{
    ViewBag.Title = "EmployeeDueReport";
}
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<div style="padding:20px">

    <h2 style="font-family:'Times New Roman';padding-left:80px">Download Employee Due Report</h2>
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" style="font-family:'Times New Roman'">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Select Unit", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("UnitId", null, "Select", htmlAttributes: new { @class = "form-control", @id = "UnitId", @required = "true" })

                </div>
            </div>
            <div class="form-group">
                @Html.Label("Select Month", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="date" name="Date" class="form-control" id="Date" required />
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Download" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

</div>